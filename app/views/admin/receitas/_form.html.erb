<%= semantic_form_for [:admin, @receita], builder: Formtastic::FormBuilder do |f| %>

    <%= f.inputs :name => "Detalhes" do %>
      <%= f.input :nome %>
      <%= f.input :tiporefeicao, :label => "Tipo de refeição" %>
      <%= f.input :categorias, :label => "Categoria", :as => :check_boxes %>
      <%= f.input :tempo, :label => "Tempo (min)" %> 
      <%= f.input :dificuldade, :label => "Dificuldade" %> 
      <%= f.input :descricao, :label => "Descrição" %> 
    <% end %>

    <%= f.inputs :name => "Ingredientes" do %>
      <%= f.input :ingredientes, :label => "Ingredientes", :as => :check_boxes %> 
    <% end %>

    <%= f.inputs :name => "Modo de confecção" do %>
      <%= f.has_many :confeccaos, :allow_destroy => true, :heading => 'Passo', :new_record => true do |c| %>
        <%= c.input :passo %>
      <% end %>
    <% end %>

    <%= f.actions do %>
      <%= f.action :submit, :label => "Submit", :button_html => { :class => "button" } %>
      <%= f.action :cancel, :label => "Cancel", :button_html => { :class => "button" }%>
    <% end %>
  <% end %>