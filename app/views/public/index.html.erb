<div id="first">
	<div class="content tc">
		<div class="container">
				<div class="row">
						<div class="col-md-12">
								<div class="logo"><%= image_tag 'logo.png',:alt => 'logo' %></div>
								<div class="intro visible-xs">Descobre. Organiza. Disfruta.</div>
						</div>
