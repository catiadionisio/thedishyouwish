<div id="wrap">
  <div class="conteudo-pagina">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="titulo">Registar</div>
        </div>
      </div>

      <div class="row mt10">
        <div class="col-md-4 col-md-offset-4 login">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: :true })  do |f| %>
            <%= devise_error_messages! %>
            <div class="row">
              <div class="col-xs-12">
                <%= f.label "Nome:" %> <br>
                <%= f.text_field :nome, autofocus: true %>
              </div>
            </div>

            <div class="row">
              <div class="col-xs-12">
                <%= f.label "Sexo:" %> <br>
                <span class="sexo">
                  <%= f.radio_button :sexo, 'masculino', :checked => true %> 
                  <%= label :sexo_masculino, 'Masculino' %>
                  <%= f.radio_button :sexo, 'Feminino' %>
                  <%= label :sexo_feminino, 'feminino' %>
                </span>
              </div>
            </div>

            <div class="row">
              <div class="col-xs-12">
                <%= f.label "Data de nascimento:" %> <br>
                <%= f.text_field :datanasc, :class => 'datepicker' %>
              </div>
            </div>

            <div class="row mt10">
              <div class="col-xs-12">
                <%= f.label "Imagem:" %> <br>
                <%= f.file_field :photo %>
              </div>
            </div>

            <div class="row mt10">
              <div class="col-xs-12">
                <%= f.label "Email:" %> <br>
                <%= f.email_field :email %>
              </div>
            </div>
            <div class="row mt10">
              <div class="col-xs-12">
                <%= f.label "Password:" %>
                <%= f.password_field :password, autocomplete: "off" %>
              </div>
            </div>
            <div class="row mt10">
              <div class="col-xs-12">
                <%= f.label "Confirmar password:" %>
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12 mt10">
                    <%= f.submit "Registar" %>
                  </div>
            </div>
          <% end %>
            <div class="row">
              <div class="col-xs-12">
                <%= render "devise/shared/links" %>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>